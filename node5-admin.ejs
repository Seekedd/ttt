<%
function tableSort(colNum, cmp) {
    let rows = [...table.rows];
    rows.sort((a, b) => cmp(a.cells[colNum].textContent, b.cells[colNum].textContent))
            .map(row => table.appendChild(row));
}

function sortByAscending() {
    tableSort(0, (a, b) => a - b); // assuming that school column has number representations
}

function sortByDescending() {
    tableSort(0, (a, b) => b - a); // assuming that school column has number representations
}
%>

<main>
    <div class="jumbotron secondary-jumbotron bg-transparent">
        <center>
            <div class="container">
                <h1>Node 5</h1>
            </div>
        </center>
    </div>

    <h1 class="cover-heading">Docker Stats</h1>
    <div class="container bg-light text-dark">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Server ID</th>
                <th><button onclick="sortByAscending()">CPU Usage</button></th>
                <th>RAM Usage</th>
                <th>NET Usage</th>
                <th>Extra</th>
            </tr>
            </thead>
            <tbody>
            <%table.forEach(function(entry) {%>
                <tr>
                    <td> <%= entry.name.slice(0, -28) %> </td>
                    <td> <%= entry.cpu_percent.toFixed(2) %>% </td>
                    <td><%- pretty(entry.mem_usage) %> </td>
                    <td>IN: <%- pretty(entry.netIO.rx)%>, OUT: <%- pretty(entry.netIO.tx) %></td>
                    <td><a style="color:red;" href="https://panel.danbot.host/server/<%=entry.name.slice(0, -28)%>">View Server</a>, <a style="color:blue;" href="https://panel.danbot.host/server/<%=entry.name.slice(0, -28)%>/files">Server Files</a></td>

                </tr>
            <%});%>
            </tbody>
        </table>
    </div>

</main>

